rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Files path - authenticated access (Firestore lookups aren't supported in Storage rules)
    match /files/{allPaths=**} {
      // Allow reads to signed-in users
      allow read: if request.auth != null;
      // Allow uploads/metadata writes to signed-in users
      allow write: if request.auth != null;
      // Allow deletes to signed-in users (tighten later using custom claims if needed)
      allow delete: if request.auth != null;
    }
  }
}